<script>
    function animateCounter(targetCount, duration, elementId) {
      const countElement = document.getElementById(elementId);
      const startCount = parseInt(countElement.textContent);
      const step = Math.ceil(targetCount / (duration * 300)); // Calculate increment per millisecond

      let currentCount = startCount;
      const interval = setInterval(function () {
        currentCount += step;
        countElement.textContent = currentCount.toLocaleString(); // Format with commas

        if (currentCount >= targetCount) {
          clearInterval(interval);
          countElement.textContent = targetCount.toLocaleString(); // Format the final count
        }
      }, 1); // Update every millisecond
    }

    // Example usage for each counter:
    window.addEventListener('load', function () {
      animateCounter(3240000, 5, 'count1'); // Count up to 3,240,000 in 5 seconds on page load
      animateCounter(5480000, 5, 'count2'); // Count up to 5,480,000 in 5 seconds on page load
      animateCounter(215714, 5, 'count3');  // Count up to 215,714 in 5 seconds on page load
      animateCounter(37650, 5, 'count4');   // Count up to 37,650 in 5 seconds on page load
    });
  </script>

